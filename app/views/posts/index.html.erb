<div class="posts-wrapper row">
	<% @posts.each do |p| %>
		<div class="post">
			<div class="post-head">
				<div class="name">
					Brandon Keao
				</div>
			</div>
			<div class="image center-block">
				<%= link_to (image_tag p.image.url(:medium)), post_path(p), class: 'img-responsive' %>
			</div>
			<p class="caption">
				<%= p.caption %>
			</p>
		</div>
	<% end %>
</div>

