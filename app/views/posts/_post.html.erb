<div class="posts-wrapper">
	<div class="post">
		<div class="post-head">
			<div class="thumb-img">
				<div class="user-name">
					<%= post.user.user_name %>
				</div>
				<div>
					<%= time_ago_in_words post.created_at %>
				</div>
			</div>
		</div>
		<div class="image center-block">
			<%= link_to (image_tag post.image.url(:medium)), post_path(post), class: 'img-responsive' %>
		</div>
		<div class="post-bottom">
			<div class="caption">
				<div class="caption-content">
					<div class="user-name">
						<%= post.user.user_name %>
					</div>
					<%= post.caption %>
				</div>
				<% if post.comments %>
          			<% post.comments.each do |comment| %>
            			<div class="comment">
              				<div class="user-name">
                				<%= comment.user.user_name %>
              				</div>
              				<div class="comment-content">
                				<%= comment.content %>
              				</div>
              				<% if comment.user == current_user %>
                				<%= link_to "Delete", post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" } %>
              				<% end %>
            			</div>
          			<% end %>
        		<% end %>
        		<div class="comment-form">
          			<%= form_for [post, post.comments.new] do |f| %>
            			<%= f.text_field :content, placeholder: 'Add a comment...', id: "Comment" %>
            			<%= f.submit "Submit" %>
          			<% end %>
        		</div>
			</div>
		</div>
		<div class="comment-like-form row">
			<div class="like-button col-sm-1">
				<!-- <span>(class="glyphicon glyphicon-heart-empty")</span> -->
			</div>
		</div>
	</div>
</div>
